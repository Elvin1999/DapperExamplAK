<Window x:Class="DapperExampl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DapperExampl"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <DataGrid Height="300" Name="myDataGrid"
                  SelectionChanged="myDataGrid_SelectionChanged"
                  ></DataGrid>
        <StackPanel Orientation="Horizontal">
            <TextBox Width="200" Name="Name" FontSize="25"></TextBox>
            <Slider VerticalAlignment="Center" Minimum="0" Maximum="100"
                    Width="200" Name="Score" FontSize="25"
                    ></Slider>
            <CheckBox Name="IsStar" FontSize="25" Content="IsStar"></CheckBox>
            <Button Margin="10" Click="Button_Click" FontSize="25" Content="Update Me"></Button>
        </StackPanel>
    </StackPanel>
</Window>
